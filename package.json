{
    "private": true,
    "name": "@hookun/pokedan",
    "license": "Apache-2.0",
    "scripts": {
        "start": "build-page --watch",
        "build": "build-page --dest docs",
        "test": "run-s test:*",
        "test:type": "tsc --noEmit",
        "test:lint": "eslint --ext .ts src",
        "test:unit": "ava"
    },
    "devDependencies": {
        "@hookun/builder": "^0.2.25",
        "@types/react": "^16.9.23",
        "@types/react-dom": "^16.9.5",
        "@types/react-redux": "^7.1.7",
        "ava": "^3.5.0",
        "npm-run-all": "^4.1.5",
        "react": "^16.13.1",
        "react-dom": "^16.13.1",
        "react-redux": "^7.2.0",
        "redux": "^4.0.5",
        "redux-saga": "^1.1.3",
        "reselect": "^4.0.0",
        "ts-node": "^8.7.0",
        "typesafe-actions": "^5.1.0",
        "typescript": "^3.8.3"
    },
    "ava": {
        "extensions": [
            "ts"
        ],
        "require": [
            "ts-node/register",
            "./node-shim.js"
        ]
    },
    "eslintConfig": {
        "extends": "./node_modules/@hookun/builder/.eslintrc.dom.json",
        "overrides": [
            {
                "files": [
                    "src/types.ts"
                ],
                "rules": {
                    "@typescript-eslint/no-explicit-any": "off"
                }
            },
            {
                "files": [
                    "*.saga.ts",
                    "**/saga/*.ts"
                ],
                "rules": {
                    "@typescript-eslint/explicit-function-return-type": "off"
                }
            }
        ]
    }
}
